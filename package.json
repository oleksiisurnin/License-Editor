{
  "name": "license-editor",
  "productName": "License Editor",
  "author": "Alexey Surnin",
  "version": "2.0.0",
  "main": "src/Main.js",
  "scripts": {
    "start": "APP_DEV=true electron .",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win"
  },
  "build": {
    "appId": "alexey.surnin.license-editor",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icons/mac/icon.icns",
      "target": [
        "dmg"
      ],
      "files": [
        "!certificates/*"
      ]
    },
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": [
        "portable"
      ],
      "certificateFile": "certificates/cert.p12",
      "certificatePassword": "5C6kHCbpjz5Cb6B4",
      "files": [
        "!certificates/*"
      ]
    },
    "portable": {
      "artifactName": "License Editor.exe"
    },
    "directories": {
      "output": "release-builds"
    }
  },
  "devDependencies": {
    "electron": "^10.4.7",
    "electron-builder": "^22.11.7"
  },
  "dependencies": {
    "adm-zip": "^0.4.16",
    "bootstrap": "^4.6.0",
    "crypto-js": "^4.1.1",
    "jquery": "^3.6.0",
    "jquery-ui-dist": "^1.12.1",
    "json-bigint": "git+https://github.com/sidorares/json-bigint.git",
    "popper.js": "^1.14.4",
    "uuid": "^8.3.2"
  }
}
